<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Opdracht"
             x:Class="Opdracht.MainPage">

    
    <StackLayout Padding="20">
        <Label Text="Klik voor Quotes" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold"/>

        <Button Text="Volgende Quote"  Clicked="Button_Clicked"></Button>
        <Slider x:Name="fontSizeSlider" ValueChanged="fontSizeSlider_ValueChanged" Maximum="50" Minimum="16"/>




        <BoxView Color="AliceBlue"></BoxView>
        
        <Label Text="Quote placeholder" FontAttributes="Italic" HorizontalOptions="Center" x:Name="quoteText"/>

        <BoxView Color="AliceBlue" ></BoxView>
        
    </StackLayout>
</ContentPage>
