<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Opdracht.TableView">

    <TableView Intent="Form">
        <TableRoot>
            <TableSection Title="Basics">
                <TextCell Text="Name" Detail="Paul Botusan" />
                <EntryCell Label="Title" Placeholder="(eg Shopping)" />
                <SwitchCell Text="Notifications" On="True" OnChanged="SwitchCell_OnChanged" />
                <ViewCell>
                    
                    <StackLayout Padding="13, 0" >
                        <Label Text="Starts" VerticalOptions="Center"> </Label>
                        <DatePicker Date="1 Jan 2019" HorizontalOptions="Center" ></DatePicker>
                    </StackLayout>
                   
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>