<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Opdracht.Sqlite.Sqlite">

    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Text="Add" Clicked="Add_Clicked" />
            <Button Text="Update" Clicked="Update_Clicked" HorizontalOptions="CenterAndExpand" />
            <Button Text="Delete" Clicked="Delete_Clicked" />
        </StackLayout>
        <ListView x:Name="recipesListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>