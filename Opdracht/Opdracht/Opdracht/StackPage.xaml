<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Opdracht.StackPage"
             Padding="0, 20, 0, 0">

    <StackLayout BackgroundColor="#127ac7" VerticalOptions="Center" Padding="100">
        <Label Text="Welcome to Xamarin"   TextColor="White" FontSize="30" HorizontalOptions="Center"/>
        <Label Text="Cross-Platform apps made easy" TextColor="White" FontSize="18" HorizontalOptions="Center" />
        <Button Text="Login" BackgroundColor="#1dabf0" TextColor="White" HorizontalOptions="Fill" ></Button>
        <Button Text="Register" BackgroundColor="#1dabf0" TextColor="White" HorizontalOptions="Fill" ></Button>
        
    </StackLayout>
    
</ContentPage>